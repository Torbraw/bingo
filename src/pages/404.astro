---
export const prerender = true;

import BaseLayout from '@/layouts/base-layout.astro';
import { getLangFromUrl, useTranslations } from '@/lib/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout title="404 - Not found" lang={lang}>
  <section class="bg-offset relative h-[calc(100vh-64px)]">
    <div class="grid h-full place-items-center px-4">
      <div class="flex flex-col">
        <div class="text-center text-7xl font-extrabold tracking-tighter sm:text-8xl">
          <h3 class="text-muted-foreground">{t('404')}</h3>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
